<div class="container">
  <div class="header">
    <h1>The Lazy Loader</h1>
  </div>
  <div class="list">
    <% @books.each do |book| %>
      <%= link_to(book, class: "book") do %>
        <img src="<%= book.image_url %>"/>
        <h2><%= book.title %></h2>
      <% end %>
    <% end %>
  </div<>
</div>
