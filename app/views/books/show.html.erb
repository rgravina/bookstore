<div class="container">
  <div class="header">
    <h1>The Lazy Loader</h1>
  </div>
  <div class="details">
    <h2><%= @book.title %></h2>
    <table>
      <thead>
        <tr>
          <th>Supplier</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @supplier_books.each do |sb| %>
        <tr>
          <td><%= sb.supplier.name %></td>
          <td><%= sb.price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
